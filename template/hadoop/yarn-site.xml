<?xml version="1.0"?>
<configuration>

    <property>
	<name>yarn.resourcemanager.address</name>
	<value>{cluster_master_ip}:8032</value>
    </property>

    <property>
        <name>yarn.resourcemanager.scheduler.address</name>
        <value>{cluster_master_ip}:8030</value>
    </property>

    <property>
        <name>yarn.resourcemanager.webapp.address</name>
        <value>{cluster_master_ip}:8088</value>
    </property>

    <property>
        <name>yarn.resourcemanager.resource-tracker.address</name>
        <value>{cluster_master_ip}:8031</value>
    </property>

    <property>
        <name>yarn.resourcemanager.admin.address</name>
        <value>{cluster_master_ip}:8033</value>
    </property>
    <property>
        <name>yarn.log-aggregation-enable</name>
        <value>true</value>
    </property>
    <property>
        <name>yarn.nodemanager.log-dirs</name>
        <value>/hadoop/yarn/nodemanager/logs/containter</value>
        <final>true</final>
    </property>
    <property>
	<name>yarn.nodemanager.local-dirs</name>
	<value>/hadoop/yarn/nodemanager/local</value>
	<final>true</final>
    </property>
    <property>
        <name>yarn.nodemanager.remote-app-log-dir</name>
        <value>/logs/yarn/apps</value>
        <final>true</final>
    </property>
    <property>
        <name>yarn.app.mapreduce.am.staging-dir</name>
        <value>/hadoop/tmp/staging</value>
    </property>
    <property>
	<name>yarn.nodemanager.aux-services</name>
	<value>mapreduce.shuffle</value>
    </property>
    <property>
        <name>yarn.nodemanager.aux-services.mapreduce.shuffle.class</name>
        <value>org.apache.hadoop.mapred.ShuffleHandler</value>
    </property>
    <property>
        <name>yarn.scheduler.minimum-allocation-mb</name>
        <value>256</value>
    </property>
    <property>
        <name>yarn.scheduler.maximum-allocation-mb</name>
        <value>1024</value>
    </property>
    <property>
	<name>yarn.nodemanager.resource.memory-mb</name>
	<value>6800</value>
    </property>
    <property>
	<name>yarn.nodemanager.vmem-pmem-ratio</name>
	<value>2.5</value>
    </property>
    <property>
        <name>yarn.resourcemanager.scheduler.class</name>
	<!--
	<value>org.apache.hadoop.yarn.server.resourcemanager.scheduler.capacity.CapacityScheduler</value>
	<value>org.apache.hadoop.yarn.server.resourcemanager.scheduler.fifo.FifoScheduler</value>
	<value>org.apache.hadoop.yarn.server.resourcemanager.scheduler.fair.FairScheduler</value>
	-->
	<value>org.apache.hadoop.yarn.server.resourcemanager.scheduler.bandwidth.BandwidthAwareScheduler</value>
    </property>
</configuration>
